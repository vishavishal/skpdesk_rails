<style>
  .devise_alert_id {
    display: none;
  }
</style>
<script type="text/javascript">
  $(function() {
    $('.devise_alert_id').hide();
    //$('.alert').slideUp(1500);
    $('.alert').fadeOut(3000);
  });
</script>

<h1>Create Project</h1>
<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>
<div id="create_project">
  <%= form_for @project, url: project_create_path do |f| %>
    <div class="form-group row">
      <div class="col-5">
        <%= f.label       :title, 'Project Title', class: "col-sm-4 col-form-label"%>
        <%= f.text_field  :title     %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-5">
        <%= f.label       :client, 'Client mail', class: "col-sm-4 col-form-label" %>
        <%= f.text_field  :client    %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-5">
        <%= f.label       :project_type, 'Project Type', class: "col-sm-4 col-form-label" %>
        <%= f.text_field  :project_type      %>
      </div>
    </div>
    <br>
    <div class="form-group row">
      <div class="col-2">
        <%= f.submit "Create project", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>